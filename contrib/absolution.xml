<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://www.phpbb.com/mods/xml/modx-1.2.6.xsd">
	<header>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>

		<title lang="en"><![CDATA[Quick Ads]]></title>

		<description lang="en"><![CDATA[Append any HTML, jQuery/JS code into your forum quickly! Very simple and useful.]]></description>

		<author-notes lang="en"><![CDATA[Do not forget to delete or rename the file "root/install_quick_ads.php" after installation (For Un-Installing, re-upload it).]]></author-notes>
		
		<author-group>
			<author>
				<username><![CDATA[o0johntam0o]]></username>
				<email><![CDATA[o0johntam0o@gmail.com]]></email>
			</author>
		</author-group>

		<mod-version>1.1.1</mod-version>

		<installation>
			<level>easy</level>
			<time>60</time>
			<target-version>3.0.11</target-version>
		</installation>

		<history>
			<entry>
				<date>2013-03-19</date>
				<rev-version>1.1.1</rev-version>
				<changelog lang="en">
					<change>Fix: Ads displays multiple times</change>
					<change>Change: Keep Ads hidden when user click close button</change>
					<change>Change: Position of close button</change>
					<change>Change: Use jQuery instead of Dollar sign</change>
					<change>Update jQuery to version 1.9.1</change>
					<change>Update MODX to version 1.2.6</change>
					<change>Other minor changes</change>
				</changelog>
			</entry>
			<entry>
				<date>2012-11-20</date>
				<rev-version>1.1.0</rev-version>
				<changelog lang="en">
					<change>Release version 1.1.0</change>
				</changelog>
			</entry>
			<entry>
				<date>2012-05-26</date>
				<rev-version>1.0.0</rev-version>
				<changelog lang="en">
					<change>Starting project (phpBB 3.0.10)</change>
				</changelog>
			</entry>
		</history>
		<link-group>
			<link type="parent" href="../install.xml" lang="en">Main Install File</link>
		</link-group>
	</header>

	<action-group>
		<copy>
			<file from="root/styles/absolution/template/mods/quick_ads.html" to="styles/absolution/template/mods/quick_ads.html" />
			<file from="root/styles/absolution/template/mods/jquery/closebt.png" to="styles/absolution/template/mods/jquery/closebt.png" />
			<file from="root/styles/absolution/template/mods/jquery/jquery-1.9.1.min.js" to="styles/absolution/template/mods/jquery/jquery-1.9.1.min.js" />
		</copy>

		<open src="styles/absolution/template/overall_header.html">
			<edit>
				<find><![CDATA[<div class="noise">]]></find>
				<action type="before-add"><![CDATA[<!-- INCLUDE mods/quick_ads.html -->]]></action>
			</edit>
		</open>
	</action-group>
</mod>
