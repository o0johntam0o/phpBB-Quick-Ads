<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://www.phpbb.com/mods/xml/modx-1.2.6.xsd">
	<header>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>
		<title lang="en"><![CDATA[Quick Ads]]></title>
		<description lang="en"><![CDATA[Append any HTML, jQuery/JS code into your forum quickly! Very simple and useful.]]></description>
		<author-notes lang="en"><![CDATA[]]></author-notes>
		<github><![CDATA[https://github.com/o0johntam0o/phpBB-Quick-Ads]]></github>
		
		<author-group>
			<author>
				<username><![CDATA[o0johntam0o]]></username>
				<email><![CDATA[o0johntam0o@gmail.com]]></email>
			</author>
		</author-group>

		<mod-version>1.1.5</mod-version>

		<installation>
			<level>easy</level>
			<time>60</time>
			<target-version>3.0.12</target-version>
		</installation>
		
		<link-group>
			<link type="parent" href="../install.xml" lang="en">Main Install File</link>
		</link-group>
	</header>

	<action-group>
		<copy>
			<file from="root/styles/subsilver2/template/mods/quick_ads.html" to="styles/subsilver2/template/mods/quick_ads.html" />
			<file from="root/styles/subsilver2/template/mods/jquery/closebt.png" to="styles/subsilver2/template/mods/jquery/closebt.png" />
			<file from="root/styles/subsilver2/template/mods/jquery/jquery-1.11.1.min.js" to="styles/subsilver2/template/mods/jquery/jquery-1.11.1.min.js" />
		</copy>

		<open src="styles/subsilver2/template/overall_header.html">
			<edit>
				<find><![CDATA[<div id="wrapheader">]]></find>
				<action type="before-add"><![CDATA[<!-- INCLUDE mods/quick_ads.html -->]]></action>
			</edit>
		</open>
	</action-group>
</mod>
